{
  "name": "editorial-tools-pinboard",
  "version": "1.0.0",
  "repository": "https://github.com/guardian/editorial-tools-pinboard",
  "private": true,
  "workspaces": [
    "bootstrapping-lambda",
    "cdk",
    "client",
    "workflow-bridge-lambda"
  ],
  "scripts": {
    "graphql-refresh": "graphql-codegen --config graphql-refresh.yml",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.19.2",
    "@graphql-codegen/introspection": "1.18.0",
    "@graphql-codegen/typescript": "1.17.11",
    "@graphql-codegen/typescript-resolvers": "1.17.11",
    "@guardian/node-riffraff-artifact": "^0.1.9",
    "husky": ">=4",
    "lint-staged": ">=10",
    "prettier": "2.2.1",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
